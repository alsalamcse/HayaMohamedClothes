<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.samsun81.hayamohamedclothes.AddPicturre"
    android:weightSum="1">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NAME"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time of the year"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibWinter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ibSwitch"
            app:srcCompat="@mipmap/winter" />

        <ImageButton
            android:id="@+id/ibSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ibAutumn"
            app:srcCompat="@mipmap/nextt" />

        <ImageButton
            android:id="@+id/ibAutumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/authem"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ibSwitch1" />

        <ImageButton
            android:id="@+id/ibSwitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ibSpring"
            app:srcCompat="@mipmap/nextt" />

        <ImageButton
            android:id="@+id/ibSpring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            app:srcCompat="@mipmap/spring" />

        <ImageButton
            android:id="@+id/ibSwitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/nextt"
            android:layout_marginStart="29dp"
            android:layout_below="@+id/ibSwitch"
            android:layout_toEndOf="@+id/ibWinter" />

        <ImageButton
            android:id="@+id/ibSummer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibAutumn"
            android:layout_toEndOf="@+id/ibSwitch2"
            app:srcCompat="@mipmap/summer" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/ibJoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/ibSad"
                app:srcCompat="@mipmap/happy" />

            <ImageButton
                android:id="@+id/ibSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/ibTrip"
                app:srcCompat="@mipmap/sad" />

            <ImageButton
                android:id="@+id/ibTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/ibOther"
                app:srcCompat="@mipmap/trip" />

            <ImageButton
                android:id="@+id/ibOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="33dp"
                app:srcCompat="@mipmap/other" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageButton
                    android:id="@+id/BtButton"
                    android:layout_width="227dp"
                    android:layout_height="142dp"

                    android:src="@android:drawable/ic_menu_camera"
                    tools:layout_editor_absoluteX="140dp"
                    tools:layout_editor_absoluteY="16dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/btAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BtButton"
                    android:layout_centerHorizontal="true"
                    android:background="?attr/colorAccent"
                    android:text="Add"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/tvOc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OCCASION"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="136dp" />


</LinearLayout>
