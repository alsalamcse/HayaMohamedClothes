<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.samsun81.hayamohamedclothes.AddPicturre"
    android:weightSum="1">

    <EditText
        android:id="@+id/etName"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="18"
        android:hint="@string/name1"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibWinter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/winter"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:id="@+id/ibSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/nextt"
            android:layout_alignTop="@+id/ibWinter"
            android:layout_toEndOf="@+id/ibWinter" />

        <ImageButton
            android:id="@+id/ibAutumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/authem"
            android:layout_alignTop="@+id/ibSwitch"
            android:layout_toEndOf="@+id/ibSwitch" />

        <ImageButton
            android:id="@+id/ibSwitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ibAutumn"
            android:layout_toEndOf="@+id/ibAutumn"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/nextt" />

        <ImageButton
            android:id="@+id/ibSpring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/spring"
            android:layout_alignTop="@+id/ibSwitch1"
            android:layout_toEndOf="@+id/ibSwitch1" />

        <ImageButton
            android:id="@+id/ibSwitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/nextt"
            android:layout_alignTop="@+id/ibSpring"
            android:layout_toEndOf="@+id/ibSwitch1"
            android:layout_marginStart="48dp" />

        <ImageButton
            android:id="@+id/ibSummer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/summer"
            android:layout_alignTop="@+id/ibSwitch2"
            android:layout_toEndOf="@+id/ibSwitch2" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/time_of_the_year"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageButton
                    android:id="@+id/ibOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/ibTrip"
                    android:layout_toEndOf="@+id/ibTrip"
                    android:background="@mipmap/ic_launcher"
                    app:srcCompat="@mipmap/other" />

                <ImageButton
                    android:id="@+id/ibTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher"
                    app:srcCompat="@mipmap/trip"
                    android:layout_alignTop="@+id/ibSad"
                    android:layout_toEndOf="@+id/ibSad" />

                <ImageButton
                    android:id="@+id/ibSad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/ibJoy"
                    android:layout_toEndOf="@+id/ibJoy"
                    android:background="@mipmap/ic_launcher"
                    app:srcCompat="@mipmap/sad" />

                <ImageButton
                    android:id="@+id/BtButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ibOther"
                    android:background="@drawable/canon"
                    android:src="@android:drawable/ic_menu_camera"
                    tools:layout_editor_absoluteX="140dp"
                    tools:layout_editor_absoluteY="16dp" />

                <Button
                    android:id="@+id/btAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="27dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/add"
                    android:textColor="@color/common_google_signin_btn_text_light_default"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <ImageButton
                    android:id="@+id/ibJoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="34dp"
                    android:layout_toStartOf="@+id/btAdd"
                    android:background="@mipmap/ic_launcher"
                    app:srcCompat="@mipmap/happy" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ibSad"
                    android:layout_alignParentStart="true"
                    android:text="@string/occasion1"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvOc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/occasion"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="136dp" />


</LinearLayout>
